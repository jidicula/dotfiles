[commit]
	template = ~/dotfiles/commit-message
    gpgSign = true
[tag]
    gpgSign = true
[init]
	templatedir = ~/.git-templates
	defaultBranch = "main"
[branch]
	autosetuprebase = always
[core]
	excludesfile = ~/dotfiles/gitignore
	autocrlf = input
[github]
	user = jidicula
[merge]
	conflictstyle=diff3
[pull]
	rebase = true
[diff]
    # Use the slower but better patience diff algorithm
	algorithm = patience
	# Use new diff algorithm to make e.g. function diffs look better.
	compactionheuristic = true
[help]
    autocorrect = prompt
[push]
    autoSetupRemote = true
# default user email and key
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[include]
    path = ~/dotfiles/gitconfig-personal
[includeIf "gitdir:**/work/**/.git"]
    path = ~/dotfiles/gitconfig-work
